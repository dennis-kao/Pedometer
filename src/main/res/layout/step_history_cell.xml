<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:textSize="16dp"
                    android:text="July 6th, 2018"
                    android:fontFamily="@font/robotocondensed_regular"
                    />

                <TextView
                    android:id="@+id/unitText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:textSize="16dp"
                    android:text=" steps"
                    android:fontFamily="@font/robotocondensed_bold"
                    />

                <TextView
                    android:id="@+id/numText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/unitText"
                    android:textSize="16dp"
                    android:text="9345"
                    android:fontFamily="@font/robotocondensed_bold"
                    />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/stepProgress"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    app:rcBackgroundColor="@color/md_grey_200"
                    app:rcBackgroundPadding="2dp"
                    app:rcMax="100"
                    app:rcProgress="50"
                    app:rcProgressColor="@color/md_blue_200"
                    app:rcRadius="5dp" />
        </RelativeLayout>
</android.support.v7.widget.CardView>