<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/progressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="parent">

        <de.j4velin.pedometer.ui.RealtimeCircularProgressBar
            android:id="@+id/dailyStepsProgressBar"
            android:layout_gravity="center"
            android:layout_width="225dp"
            android:layout_height="225dp"
            android:background="?android:colorBackground"
            app:layout_constraintTop_toBottomOf="parent"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/weeklyProgressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/progressContainer"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/weeklyProgressList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weeklyProgressContainer">


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>